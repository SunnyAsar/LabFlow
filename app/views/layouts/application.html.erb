<!DOCTYPE html>
<html>
  <head>
    <title>LabFlow</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'home', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'login', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="theme/dist/assets/css/icons.min.css" rel="stylesheet" type="text/css" />

  </head>

<body>

        <div id="wrapper">
            <% flash.each do |name, msg|%>
                <div class="container is-centered" id="flashBox">
                  <%= content_tag :div, class: " alert alert-#{ name == "notice" ? "primary" : "danger" } ", role: "alert" do %>
                      <p class="notice"><%= msg %></p>
                  <%end%>
                </div>
            <%end%>
              <%= render 'shared/nav' if current_user  %>
            <!-- ========== Left Sidebar Start ========== -->
            <%= render 'shared/sidebar' if current_user %>
            <div class="content-page">
                <div class="content" id="content">
                    <%= yield %>
                </div> 
                <%= render 'shared/footer' if current_user %>
            </div>
        </div>

        <!-- Right Sidebar -->
          <%= render 'shared/rightsidebar'if current_user  %>
        <!-- /Right-bar -->
        <!-- Right bar overlay-->
        <div class="http://127.0.0.1:3000/theme/dist/rightbar-overlay"></div>
        <!-- Vendor js -->
        <script src="http://127.0.0.1:3000/theme/dist/assets/js/vendor.min.js"></script>

        <!-- App js -->
        <script src="http://127.0.0.1:3000/theme/dist/assets/js/app.min.js"></script>
        
    </body>
  
</html>
